<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_record_play"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.MusiCool.RecordPlayActivity"
    android:background="@drawable/background_player">

    <LinearLayout
        android:id="@+id/layout_play_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layout_play_action"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/layout_play_title"
        android:layout_marginTop="20dp">
    </RelativeLayout>


</RelativeLayout>
